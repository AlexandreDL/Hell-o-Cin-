{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Team index{% endblock %}

{% block content %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>
                    <a href="{{ path('backend_team_show', {'id': team.id}) }}" class="btn btn-primary"> <i class="fas fa-eye"></i></a>
                    <a href="{{ path('backend_team_edit', {'id': team.id}) }}" class="btn btn-primary"> <i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_team_new') }}"><button class="btn btn-success" type="submit">Create New</button></a>
{% endblock %}
