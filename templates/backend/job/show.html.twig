{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Job{% endblock %}

{% block content %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ job.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_job_index') }}"><button class="btn btn-dark my-2 my-sm-0" type="submit">Back to list</button></a>

    <a href="{{ path('backend_job_edit', {'id': job.id}) }}"><button class="btn btn-success" type="submit">Edit</button></a>

    {{ include('backend/job/_delete_form.html.twig') }}
{% endblock %}
