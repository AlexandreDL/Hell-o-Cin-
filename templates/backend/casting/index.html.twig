{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Casting index{% endblock %}

{% block content %}
    <h1>{{ movie.title }} Casting</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>role</th>
                <th>OrderCredit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for casting in movie.castings %}
            <tr>
                <td>{{ casting.id }}</td>
                <td>{{ casting.role}}</td>
                <td>{{ casting.orderCredit }}</td>
                <td>
                    <a href="{{ path('backend_casting_show', {'id': casting.id}) }}" class="btn btn-primary"> <i class="fas fa-eye"></i></a>
                    <a href="{{ path('backend_casting_edit', {'id': casting.id}) }}" class="btn btn-primary"> <i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_casting_new', {'id' : movie.id}) }}"><button class="btn btn-success" type="submit">Create New</button></a>
{% endblock %}
